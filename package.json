  "scripts": {
    "seed:catalog": "ts-node src/catalog/infrastructure/db/seeders/runSeeders.ts",
    "deploy:seed": "serverless deploy && npm run seed:catalog",
    "set:apiurl": "node cmd/set-api-url.js",
